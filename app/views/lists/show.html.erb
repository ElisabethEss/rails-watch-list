<h1>This is your list of interest:</h1>

<h2><%= @list.name %></h2>

<h3>Comments:</h3>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.movie.title %></li>
      <%= bookmark.comment %><br>
      <%= link_to "Remove Comment", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to delete this bookmark?" } %>
  <% end %>
</ul>

<%= link_to "Back to all movies", movies_path %>

<%= link_to "Back to your lists", lists_path %>

<%= link_to "Create a new bookmark for this list", new_list_bookmark_path(@list) %>
